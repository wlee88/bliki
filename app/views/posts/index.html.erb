<h1>Listing posts</h1>

<table>
  <tr>
	<th>ID</th>
    <th>Title</th>
    <th>Description</th>
    <th>Row</th>
    <th>Order</th>
    <th>Box</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
	<td><%= post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.row %></td>
    <td><%= post.order %></td>
    <td><%= post.box_id %></td>
    <td><%= post.user_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Post', new_post_path %>
