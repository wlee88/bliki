<!DOCTYPE html>
<html>
<head>
  <title>Blox</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>

<%# javascript_include_tag "http://gettopup.com/releases/latest/top_up-min.js" %>
  <%# csrf_meta_tag %>
</head>
<body> 
	
	<div id="container">
	<div id="menu_strip">
	<div id="user_nav">
			
		<ul>
			<%= yield :title %>
			<li><%= link_to "Home", "/home/index" %>
			<li><%= link_to "My Pieces", "/boxes/me" %>
			<li><%= link_to "My Boxes", posts_path %>
			<li><%= link_to "Public Boxes", ""%>
			<li>	<% if current_user %>
				    <%= link_to "Log out", log_out_path %>
			
		
		<span id="username_text">Logged in as <%= current_user.username.capitalize %></span>
		  <% else %>
		    <%= link_to "Sign up", sign_up_path %> or
		    <%= link_to "log in", log_in_path %>
		  <% end %>
		</ul>
		</div>
	</div>
	

	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	
<%= yield %>
	</div>
</body>
</html>
