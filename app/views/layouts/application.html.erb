<!DOCTYPE html>
<html>
<head>
  <title>Blox</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body> 
	
	<div id="user_nav">
	| <%= link_to "Home", "home/index" %>
	| <%= link_to "Boxes", boxes_path %>
	| <% if current_user %>
	    <%= link_to "Log out", log_out_path %> | </div><div id="username_nav">Logged in as <%= current_user.username %></div> 
	  <% else %>
	    <%= link_to "Sign up", sign_up_path %> or
	    <%= link_to "log in", log_in_path %>
	  <% end %>
	</div>

	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	
<%= yield %>

</body>
</html>
