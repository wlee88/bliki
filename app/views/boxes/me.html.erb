<% content_for :title do %>
<span id="title_text"><%= get_username(current_user.id).capitalize %>'s Items</span>
<% end %>


<div id="sort_box">
	Sort By:
	
	<% @options = ["all"] %>
<% @boxes.each do |box| %>
	<%box.tags.each do |tag| %>
		<% @options.delete(tag)%>
		<% @options << tag %>
	<% end %>
<% end %>

<%= select_tag 'sort[]', options_for_select(@options, :selected => 'all'), :include_blank => false,:onchange => remote_function(:url => {:controller => 'boxes', :action => :update_sort_box}, :with => "'sort='+this.value", :update => "div_containing_list") %>
</div>

<div id="my_box_collection">
<%= render 'box_collection'%>
</div>
